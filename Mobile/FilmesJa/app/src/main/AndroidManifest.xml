<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.os10.tcc.filmesja">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-feature android:name="android.hardware.camera" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activitys.LoginActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activitys.ContasActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".Activitys.FulanoActivity"
            android:label="@string/title_activity_fulano"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activitys.ExibeFilmeActivity"
            android:label="@string/title_activity_exibe_filme"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activitys.CriarContaActivity"
            android:label="@string/title_activity_criar_conta"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".Activitys.PlayerActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_player"
            android:theme="@style/FullscreenTheme" />
        <activity
            android:name=".Activitys.Player2Activity"
            android:label="@string/title_activity_player2"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>